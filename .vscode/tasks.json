{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++-13 build active file",
      "command": "sh",
      "args": [
        "-c",
        "/usr/bin/g++-13 -fdiagnostics-color=always -g '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}' && rm -f '${fileDirname}/${fileBasenameNoExtension}'"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "detail": "Task generated by Debugger.",
      "isBackground": false
    }
  ]
}
